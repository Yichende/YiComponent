{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "dist/types",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx", "**/*.test.tsx", "node_modules", "dist"]
}
